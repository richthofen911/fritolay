<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    
    tools:context=".Survey" >

        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/header_txt_wrap"
                        android:background="#ef816b">
            <TextView
                    android:id="@+id/header_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Survey"
                    android:typeface="monospace"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_margin="10dp" />

        </RelativeLayout>


<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/survey_wrap"
        android:layout_below="@+id/header_txt_wrap"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
            android:id="@+id/question_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Survey"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/action"
            android:layout_below="@+id/question_txt"
            android:textColor="#ef816b"
            android:textSize="15sp"
            android:text="Click on answer to continue:"
            />

    <ListView
            android:id="@android:id/list"
            style="@style/list_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action"
            android:textColor="#FFFFFF" />

</RelativeLayout>






</RelativeLayout>