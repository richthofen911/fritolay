<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/begin_coupon"
        android:background="@drawable/redeem_button_ap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="34dp"
        android:text="" />


    <TextView
        android:id="@+id/thank_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/begin_coupon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:text="@string/thanks_for_survey"
        android:textColor="#000000"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/begin_coupon"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/thank_you_vertical_padding"
        android:src="@drawable/present_ap1" />

</RelativeLayout>
